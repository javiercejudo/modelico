{
  "name": "modelico",
  "version": "5.0.1",
  "description": "Universal library for serialisable immutable models",
  "main": "index.js",
  "scripts": {
    "test": "gulp test",
    "test-browsers": "./scripts/browser_tester.sh",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "npm run build-dev && npm run build-min && npm run build-browser-spec",
    "build-dev": "browserify ./index.js -s Modelico -t babelify -o dist/modelico.js",
    "build-min": "browserify ./index.js -s Modelico -t babelify -o -g uglifyify | uglifyjs -c -m > dist/modelico.min.js",
    "build-browser-spec": "browserify ./test/modelicoSpec.js -t babelify -s modelicoSpec -o dist/modelico-spec.js",
    "version": "npm run build && git add -A dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javiercejudo/modelico.git"
  },
  "keywords": [
    "model",
    "immutable",
    "reviver",
    "objects",
    "serialization",
    "json",
    "stringify",
    "parse"
  ],
  "author": "Javier Cejudo <javier@javiercejudo.com> (http://www.javiercejudo.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/javiercejudo/modelico/issues"
  },
  "homepage": "https://github.com/javiercejudo/modelico#readme",
  "devDependencies": {
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "gulp": "^3.9.0",
    "gulp-codecov": "^2.0.1",
    "gulp-coverage": "^0.3.38",
    "gulp-istanbul": "^0.10.2",
    "gulp-mocha": "^2.1.3",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sauce-launcher": "^0.3.1",
    "phantomjs-prebuilt": "^2.1.7",
    "rimraf": "^2.4.3",
    "should": "^8.3.0",
    "uglify-js": "^2.6.2",
    "uglifyify": "^3.0.1"
  }
}
